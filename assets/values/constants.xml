<?xml version="1.0" encoding="UTF-8" ?>
<constants>
  <ints>
    <!--Window dimensions and pixel depth-->
    <constant value="1280" id="IDS_WINDOW_X"/>
    <constant value="720" id="IDS_WINDOW_Y"/>
    <constant value="24" id="IDS_WINDOW_PDEPTH" />


    <constant value="7" id="IDS_FONT_SIZE"/>

    <!--size of one space on the color grid-->
    <constant value="8" id="IDS_COLORGRID_SIZE"/>

    <!--size of one space on the color grid-->
    <constant value="5" id="IDS_DEFAULT_HEALTH"/>
  </ints>
  <doubles>
    <!--view size constants-->
    <constant value="256" id="IDS_VIEW_X"/>
    <constant value="192" id="IDS_VIEW_Y"/>

    <!--PlayingScreen constants-->
    <constant value="1" id="IDS_MIN_SPAWN_INTERVAL"/>
    <constant value="10" id="IDS_BASE_SPAWN_INTERVAL"/>

    <constant value="100" id="IDS_MOVEMENT_SPEED"/>
    <constant value="5" id="IDS_SWORD_TIME"/>
    <constant value="2" id="IDS_INVIS_TIME"/>

    <!-- HUD constants -->
    <constant value="32" id="IDS_HUD_HEIGHT"/>
    <constant value="1" id="IDS_HEALTHBAR_W"/>
    <constant value="3" id="IDS_HEALTHBAR_H"/>
    <constant value="10" id="IDS_SWORDBAR_W"/>
    <constant value="3" id="IDS_SWORDBAR_H"/>


    <!-- The amount of gameplay time in seconds at which the enemy spawn interval will be at its minimum.
         After this amount of gameplay time, the game is considered "mature" and will not get any harder.-->
    <constant value="150" id="IDS_MATURE_GAME"/>

    <!-- The amount of distance from the player that is considered "close".
         Anything higher than this is far away.-->
    <constant value="40" id="IDS_DISTANCE_THRESHOLD"/>

    <!-- For screens from which you cannot move on until a certain amount of time has elapsed,
         use IDS_MIN_SCREEN_TIME-->
    <constant value="2" id="IDS_MIN_SCREEN_TIME"/>

  </doubles>
</constants>
